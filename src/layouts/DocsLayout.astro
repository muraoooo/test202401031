---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Next.js 完全解説ドキュメント" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Next.js Docs</title>
  </head>
  <body>
    <div class="docs-container">
      <header class="header">
        <div class="header-content">
          <div class="logo">
            <a href="/">Next.js 完全解説</a>
          </div>
          <nav class="top-nav">
            <a href="/docs/getting-started">はじめに</a>
            <a href="/docs/api-reference">API リファレンス</a>
            <a href="/docs/examples">実装例</a>
            <a href="https://github.com/vercel/next.js" target="_blank">GitHub</a>
          </nav>
        </div>
      </header>

      <div class="main-container">
        <aside class="sidebar">
          <nav class="side-nav">
            <div class="nav-group">
              <h3>🚀 はじめに</h3>
              <ul>
                <li><a href="/docs/getting-started">Next.jsとは</a></li>
                <li><a href="/docs/installation">インストール方法</a></li>
                <li><a href="/docs/project-structure">プロジェクト構成</a></li>
              </ul>
            </div>

            <div class="nav-group">
              <h3>💡 基本概念</h3>
              <ul>
                <li><a href="/docs/routing">ルーティング</a></li>
                <li><a href="/docs/pages">ページ</a></li>
                <li><a href="/docs/data-fetching">データフェッチング</a></li>
                <li><a href="/docs/rendering">レンダリング</a>
                  <ul>
                    <li><a href="/docs/rendering/csr">CSR</a></li>
                    <li><a href="/docs/rendering/ssr">SSR</a></li>
                    <li><a href="/docs/rendering/ssg">SSG</a></li>
                    <li><a href="/docs/rendering/isr">ISR</a></li>
                  </ul>
                </li>
              </ul>
            </div>

            <div class="nav-group">
              <h3>🛠 応用機能</h3>
              <ul>
                <li><a href="/docs/api-routes">APIルート</a></li>
                <li><a href="/docs/middleware">ミドルウェア</a></li>
                <li><a href="/docs/authentication">認証</a></li>
                <li><a href="/docs/deployment">デプロイ</a></li>
              </ul>
            </div>

            <div class="nav-group">
              <h3>📚 ベストプラクティス</h3>
              <ul>
                <li><a href="/docs/performance">パフォーマンス最適化</a></li>
                <li><a href="/docs/security">セキュリティ対策</a></li>
                <li><a href="/docs/testing">テスト</a></li>
                <li><a href="/docs/error-handling">エラーハンドリング</a></li>
              </ul>
            </div>
          </nav>
        </aside>

        <main class="content">
          <slot />
        </main>
      </div>
    </div>
  </body>
</html>

<style>
  :root {
    --header-height: 60px;
    --sidebar-width: 280px;
    --primary-color: #0070f3;
    --text-color: #333;
    --bg-color: #ffffff;
    --sidebar-bg: #f5f5f5;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    color: var(--text-color);
    line-height: 1.6;
  }

  .docs-container {
    min-height: 100vh;
  }

  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: var(--header-height);
    background: var(--bg-color);
    border-bottom: 1px solid #eaeaea;
    z-index: 100;
  }

  .header-content {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo a {
    font-size: 1.5rem;
    font-weight: bold;
    color: var(--primary-color);
    text-decoration: none;
  }

  .top-nav a {
    margin-left: 2rem;
    color: var(--text-color);
    text-decoration: none;
    font-weight: 500;
  }

  .top-nav a:hover {
    color: var(--primary-color);
  }

  .main-container {
    padding-top: var(--header-height);
    display: flex;
  }

  .sidebar {
    position: fixed;
    width: var(--sidebar-width);
    height: calc(100vh - var(--header-height));
    background: var(--sidebar-bg);
    overflow-y: auto;
    padding: 2rem;
  }

  .nav-group {
    margin-bottom: 2rem;
  }

  .nav-group h3 {
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.8rem;
    color: #666;
  }

  .nav-group ul {
    list-style: none;
    padding-left: 0.5rem;
  }

  .nav-group ul ul {
    padding-left: 1rem;
    margin-top: 0.5rem;
  }

  .nav-group li {
    margin-bottom: 0.5rem;
  }

  .nav-group a {
    color: var(--text-color);
    text-decoration: none;
    font-size: 0.95rem;
    display: block;
    padding: 0.3rem 0;
  }

  .nav-group a:hover {
    color: var(--primary-color);
  }

  .content {
    flex: 1;
    margin-left: var(--sidebar-width);
    padding: 2rem 3rem;
    max-width: calc(100% - var(--sidebar-width));
  }

  @media (max-width: 768px) {
    .sidebar {
      transform: translateX(-100%);
      transition: transform 0.3s ease;
    }

    .content {
      margin-left: 0;
      max-width: 100%;
    }

    .header-content {
      padding: 0 1rem;
    }

    .top-nav {
      display: none;
    }
  }
</style>